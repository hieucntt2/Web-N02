@model IEnumerable<WebQLCuaHangThucPham.Models.AnhSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3 class="card-title w-25"></h3>
            <div class="d-flex justify-content-end w-75">
                <a href="/admins/anhsps/create">Thêm mới</a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body ">
            <table class=" table  table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MaSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenAnh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.URL)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaAnh)
                        </td>
                        <td>
                            <img src="~/Images/@item.URL" width= "120px" />
                        </td>

                       

                        <td class="text-center tac-vu ">
                            <a href="/admins/AnhSPs/edit/@item.MaAnh">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/admins/anhsps/details/@item.MaAnh">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admins/anhsps/Delete/@item.MaAnh">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>

