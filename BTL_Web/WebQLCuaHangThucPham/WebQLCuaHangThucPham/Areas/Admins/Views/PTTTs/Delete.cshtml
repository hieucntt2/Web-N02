@model WebQLCuaHangThucPham.Models.PTTT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal ">

                <h4>Are you sure you want to delete this?</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaPTTT)

                <div class="form-group d-flex">
                    @Html.LabelFor(model => model.TenPT, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenPT, new { htmlAttributes = new { @class = "form-control", @readOnly = "readdonly" } })
                        @Html.ValidationMessageFor(model => model.TenPT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex w-100">
                    <div class="col-md-12 d-flex justify-content-end">
                        <input type="submit" value="Xóa" class="btn btn-success mr-1" />
                        <a href="/admins/PTTts/" class="btn btn-danger mx-1">Quay lại</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>



