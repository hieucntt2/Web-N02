@model IEnumerable<WebQLCuaHangThucPham.Models.GiaSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3 class="card-title w-25"></h3>
            <div class="d-flex justify-content-end w-75">
                <a href="/admins/giasps/create">Thêm mới</a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body ">
            <table class=" table  table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Time_Begin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Time_End)
                        </th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>item</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gia)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Time_Begin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Time_End)
                            </td>
                            <td class="text-center tac-vu ">
                                <a href="/admins/Giasps/edit/@item.MaGia">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/admins/giasps/details/@item.MaGia">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/admins/giasp/Delete/@item.MaGia">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>
