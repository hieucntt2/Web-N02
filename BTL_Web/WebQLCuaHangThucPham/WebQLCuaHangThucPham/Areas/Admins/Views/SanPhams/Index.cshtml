@model IEnumerable<WebQLCuaHangThucPham.Models.SanPham>
@ViewBag.
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3 class="card-title w-25"></h3>
            <div class="d-flex justify-content-end w-75">
                <a href="/admins/sanphams/create">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GTSP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaLoai)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.SL)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.isActive)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GTSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaLoai)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.SL)
                            </td>
                            <td class="is-active">
                                @if (item.isActive == 0)
                                {
                                    <span class="text-success"> Hoạt động </span> }
                                else
                                {
                                    <span class="text-danger">Đang khóa</span>}
                            </td>
                            <td class="text-center tac-vu">
                                <a href="/admins/SanPhams/edit/@item.MaSP">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/admins/sanphams/details/@item.MaSP">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/admins/sanphams/Delete/@item.MaSP">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
